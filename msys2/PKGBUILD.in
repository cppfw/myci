# Maintainer: Ivan Gagis <igagis@gmail.com>
pkgname=myci
pkgver=$(version)
pkgrel=1
epoch=
pkgdesc="Ivan Gagis's CI scripts"
arch=('any')
url="http://github.com/igagis/myci"
license=('MIT')
groups=()
depends=()
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=("https://github.com/igagis/$pkgname/archive/$pkgver.tar.gz")
noextract=()
md5sums=()
validpgpkeys=()

prepare() {
	cd "$pkgname-$pkgver"
}

build() {
	cd "$pkgname-$pkgver"
	make autojobs=true
}

check() {
	cd "$pkgname-$pkgver"
	make test
}

package() {
	cd "$pkgname-$pkgver"
	make DESTDIR="$pkgdir" install
}
