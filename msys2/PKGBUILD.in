# Maintainer: Ivan Gagis <igagis@gmail.com>
pkgname=myci
pkgver=$(version)
pkgrel=1
epoch=
pkgdesc="Ivan Gagis's CI scripts"
arch=('any')
url="http://github.com/igagis/myci"
license=('MIT')
groups=()
depends=('curl')
makedepends=('make' 'diffutils')
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=() # Do not download any sources
noextract=()
md5sums=()
validpgpkeys=()

rootDir=$(pwd)/..

prepare() {
	cd "$rootDir"
}

build() {
	cd "$rootDir"
	make autojobs=true
}

check() {
	cd "$rootDir"
	make test
}

package() {
	cd "$rootDir"
	make DESTDIR="$pkgdir" PREFIX=/usr install
}
